<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ListViewXamarin.HomePage">
  <ListView x:Name="MainListView" HasUnevenRows="True" BackgroundColor="Blue">
    <ListView.ItemTemplate>
      <DataTemplate>
        <ViewCell>
          <StackLayout Orientation="Vertical">

            <StackLayout Orientation="Vertical"  Padding="20" BackgroundColor="Green">
              <Label Text="{Binding Name}" Font="Large" TextColor="White"></Label>
              <Label Text="{Binding Age}" Font="Bold" TextColor="White"></Label>
              <Grid BackgroundColor="Blue" HeightRequest="10"></Grid>
            </StackLayout>
          </StackLayout>
        </ViewCell>
      </DataTemplate>
    </ListView.ItemTemplate>
  </ListView>
</ContentPage>